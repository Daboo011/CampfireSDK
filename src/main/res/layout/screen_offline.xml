<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root"
    android:background="?colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/vMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vEmptyImage"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/bg_20" />

        <TextView
            android:id="@+id/vMessage"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="240dp"
            android:text="@string/error_network_trying" />

        <ProgressBar
            android:id="@+id/vProgressLine"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:indeterminate="true" />


    </LinearLayout>

    <TextView
        android:id="@+id/vScoreRobots"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="86dp"
        android:gravity="center"
        android:text="Robots: 124" />

    <com.sayzen.campfiresdk.screens.other.offline.ViewMiniGame
        android:id="@+id/vMiniGame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/vScoreHumans"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="86dp"
        android:gravity="center"
        android:text="Humans: 0" />


</FrameLayout>