<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vRootContainer"
    android:layout_width="match_parent"
    android:background="?content_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="2dp">

            <com.sup.dev.android.views.views.ViewImagesSquare
                android:id="@+id/vImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/vProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vTitle"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/vReports"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="?ic_security_24dp"
                android:drawablePadding="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="48dp"
                android:gravity="center"
                android:text="10"/>

        </FrameLayout>

    </LinearLayout>

    <com.sup.dev.android.views.views.ViewIcon
        android:id="@+id/vMenu"
        style="@style/Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="?ic_more_vert_grey_18dp" />

</FrameLayout>