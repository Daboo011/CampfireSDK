<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?ic_star_36dp"/>

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="?ic_star_36dp"/>

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="?ic_star_36dp"/>

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="?ic_star_36dp"/>

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="?ic_star_36dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/vField"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:lines="3"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/app_review"
        android:inputType="textMultiLine|textCapSentences|textAutoCorrect"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <com.sup.dev.android.views.views.ViewButton
            android:id="@+id/vCancel"
            style="@style/Button.Text"
            android:text="@string/app_cancel"
            android:layout_marginRight="8dp"/>

        <com.sup.dev.android.views.views.ViewButton
            android:id="@+id/vEnter"
            style="@style/Button.Text"
            android:text="@string/app_create"/>

    </LinearLayout>

</LinearLayout>

